
<div class='col-lg-3'>
  <div class="row">
     <h2>User info</h2>
      <table class='table'>
        <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </table>
  </div>
  <div class='row'>
    <%= link_to edit_user_path(user.id) do %>
    <i class= "col-lg-12 btn btn-default glyphicon glyphicon-wrench"></i>
    <%end%>
  </div>
  <div class="row">
    <h2>New book</h2>
    <%= form_for(book) do |f| %>

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_field :body %>
      </div>

        <!-- <input type="submit" value="Create Book" class="btn btn-primary col-xs-12"> -->

        <%= f.submit :class=> "btn btn-primary col-lg-12" %>



    <% end %>
  </div>


</div>