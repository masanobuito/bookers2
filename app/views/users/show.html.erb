<%= render 'users/list', user: @user, book: @book %>

<div class="col-lg-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">

  <thead>
    <tr>

      <th>Title</th>
      <th>Opinion</th>

    </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
      <tr>
      	<td><%= attachment_image_tag @user, :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>